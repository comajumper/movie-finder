@import '../../consts/reset.styl';
@import '../../consts/typography.styl';
@import '../../consts/grid.styl';

body
    background: rgb(110,12,22);

.MovieList
    padding-top: 17vh;

    &__header
        text-align: justify;
        padding: 0 12vw;

    &__title
        font-size: 4.2em;
        line-height: 1em;
        margin-bottom: 0.6em;
        font-weight: 500;
        color: #FFFFFF;
        vertical-align: baseline;
        display: inline-block;
        width:50%;


    &__info
        vertical-align: baseline;
        color: rgba(236, 138, 88, 0.74);
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.168em;
        width: 50%;
        text-align: right;
        display: inline-block;

    &__items
        white-space: nowrap;
        overflow-x: scroll;
        overflow-y: visible;
        padding: 9vh 12vw;
        padding-top: 3vh;

        &::-webkit-scrollbar {
            display: none;
        }

    &__loading
        color: #FFF;
        margin-top: 50vh;
        margin-left: 10vw;
        font-size: 32px;
        line-height: 40px;
        transform: translateY(-50%);

    &__item
        display: inline-block;
        width: 35vh;
        cursor: pointer;
        position: relative;
        margin-right: 2vw;
        transition: all 300ms cubic-bezier(0.23, 1, 0.32, 1);
        box-shadow: 0 0 10px 0 rgba(0,0,0,0);

        &:last-child
            margin-right: 10vw;

        &_unselected
            opacity: 0.4;
            transform: scale(0.93);

        &_selected
        &:hover
            z-index: 9999;
            transform: scale(1.07);
            opacity: 1;
            box-shadow: 0 20px 50px -5px rgba(0,0,0,0.6);

    &__poster
        background-size: cover;
        z-index: 1;
        background-position: center;

        &:after
            content: "";
            display: block;
            padding-bottom: 150%;
