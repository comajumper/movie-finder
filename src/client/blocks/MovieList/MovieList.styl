@import '../../consts/reset.styl';
@import '../../consts/typography.styl';
@import '../../consts/grid.styl';

body
    background: rgb(110,12,22);

.Page

    &__title
        margin-top: 17vh;
        max-width: 50vw;
        padding-left: 10vw;
        color: #FFF;
        font-size: 7vh;
        line-height: 1em;

.Loading
    color: #FFF;
    margin-top: 50vh;
    margin-left: 10vw;
    font-size: 32px;
    line-height: 40px;
    transform: translateY(-50%);

.MovieList
    user-select: none;
    padding-top: 7vh;
    padding-bottom: 10vh;
    overflow-x: scroll;
    white-space: nowrap;
    padding-left: 10vw;

    &::-webkit-scrollbar {
      display: none;
    }

.Movie
    display: inline-block;
    width: 35vh;
    cursor: pointer;
    position: relative;
    margin-right: 2vw;
    transition: all 350ms cubic-bezier(0.23, 1, 0.32, 1);
    box-shadow: 0 0 10px 0 rgba(0,0,0,0);

    &:last-child
        margin-right: 10vw;

    &:before
        position: absolute;
        top: 0;
        bottom: 0;
        z-index: 12;
        left: 0;
        right: 0;
        content: '';
        transition: box-shadow 350ms cubic-bezier(0.23, 1, 0.32, 1);
        box-shadow: inset 0 20px 0px 0 rgba(255,255,255,0);

    &:hover&:before
        box-shadow: inset 0 0 80px 10px rgba(255,255,255,0.05);

    &:hover
        z-index: 9999;
        transform: scale(1.07);
        box-shadow: 0 20px 50px -5px rgba(0,0,0,0.6);

    &__poster
        background-size: cover;
        z-index: 1;
        background-position: center;

        &:after
            content: "";
            display: block;
            padding-bottom: 150%;
